<% layout('layouts/boilerplate') %> 
    
    <h1>Here are all the camps!</h1>
    <a href="/campgrounds/add_camp">Click to add a camp</a>

    <div class="accordion" id="accordionExample">
    <% let i = 1; %> 
    <% for(let camp of allCamps) { %> 
        <div class="accordion-item">
            <h2 class="accordion-header" id=<%= `heading${i}` %>>
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target=<%= `#collapse${i}` %> aria-expanded="true" aria-controls=<%= `collapse${i}` %>>
                <%= camp.title %> at <%= camp.location %> for $<%= camp.price %> per night. 
                </button>
            </h2>
            <div id=<%= `collapse${i}` %> class="accordion-collapse collapse" aria-labelledby=<%= `heading${i}` %> data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <div class="card mx-auto" style="width: 25rem;">
                        <img src="<%= camp.image %>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title"><%= camp.title %>, <%= camp.location %> </h5>
                            <h6 class="card-title">$<%= camp.price %> per night </h3>
                            <p class="card-text"><%= camp.description %></p>
                            <a style="text-decoration: none" href="/campgrounds/<%= camp._id %>">
                                <button class="btn btn-outline-dark">Learn More</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% i += 1; %> 
    <% } %> 
    </div>

    